<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Piket" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
    </style>

    <!-- Activity Theme. -->
    <style name="Theme.Piket.SplashScreen" parent="Theme.Piket">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.Piket.Home" parent="Theme.Piket">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/homeBackgroundColor</item>
    </style>

    <style name="Theme.Piket.LoginScreen" parent="Theme.Piket">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/loginPageBackgroundColor</item>
    </style>

    <!-- Text. -->
    <style name="Theme.Piket.Welcome" parent="Theme.Piket">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Piket.SubWelcome" parent="Theme.Piket.Welcome">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Piket.LoginFieldTitle" parent="Theme.Piket">
        <item name="android:textColor">#828282</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Piket.ListTitle" parent="Theme.Piket">
        <item name="android:alpha">0.3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="Theme.Piket.NameItem" parent="Theme.Piket">
        <item name="android:textColor">#AD505050</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Piket.NameItem.BelumPiket" parent="Theme.Piket.NameItem">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.Piket.DutyItem" parent="Theme.Piket.NameItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Piket.DutyItem.BelumPiket" parent="Theme.Piket.NameItem.BelumPiket">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--  Text Input  -->
    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">12</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
    </style>

    <!--  Button  -->
    <style name="Widget.Piket.Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_button_state_list_anim
        </item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.SudahPiket.Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/next_button_state_list_anim
        </item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Piket.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!--  Toolbar  -->
    <style name="Widget.Piket.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="android:theme">?theme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Piket.Toolbar</item>
    </style>

    <style name="TextAppearance.Piket.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="Theme.Piket.SelectedFullDate"> <!-- Oct. Hari Ini, yq paling atas -->
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Piket.Day"><!-- Day -->
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:alpha">0.3</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="Theme.Piket.Date"><!-- Date -->
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/datePickerNumber</item>
    </style>

</resources>
